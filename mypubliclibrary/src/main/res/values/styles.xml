<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="popWindowAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_window_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_window_exit</item>
    </style>

    <style name="BottomIosDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_ios_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_ios_dialog_exit</item>
    </style>

    <style name="DefaultProgressDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ClearShadow" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>

    <!-- 默认水平分割线样式 -->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/colorLine</item>
    </style>
</resources>